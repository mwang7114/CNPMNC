<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/Content/css/Admin/CSSAdmin.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar custom-navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand">
                <img src="~/Content/images/logo_syncmaster.png" alt="Logo" style="width:70px" class="rounded-pill" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="collapsibleNavbar">
                <div class="fm-link-menu">
                    <a>@Html.ActionLink("SyncMaster", "HomeAdmin", "Admin")</a>
                </div>
            </div>
            <div class="justify-content-end">
                <a href="@Url.Action("Login", "Relog")" class="log-out">
                    <i class="fas fa-sign-out-alt"></i>
                    <span style="padding-left: 5px;">Logout</span>
                </a>
            </div>
        </div>
    </nav>
    <div class="content">
        <div class="slidebar">
            <h4 class="text-center py-3">Admin Panel</h4>
            <a href="@Url.Action("HomeAdmin", "Admin")"><i class="bi bi-house-door"></i> Quản lý tổng quan</a>
            <a href="@Url.Action("Index", "Project")"><i class="bi bi-folder"></i> Quản lý dự án</a>
            <a href="@Url.Action("Index", "Task")"><i class="bi bi-list-task"></i> Quản lý nhiệm vụ</a>
            <a href="@Url.Action("Index", "User")"><i class="bi bi-people"></i> Quản lý người dùng</a>
            <a href="@Url.Action("Index", "Report")"><i class="bi bi-bar-chart"></i> Báo cáo</a>
        </div>
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
