@model ProjectManagementWeb.Models.NguoiDung
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutRelog.cshtml";
}

<div class="container">
    <div class="logo">
        <img src="~/Content/images/logo_syncmaster.png" alt="Logo">
    </div>

    @using (Html.BeginForm("AuthenRegister", "Relog", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="name">Tên</label>
            @Html.TextBoxFor(m => m.HoTen, new { @id = "name", @placeholder = "Nhập tên của bạn", @required = "required" })
            @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @id = "email", @placeholder = "Nhập email của bạn", @required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="password">Mật khẩu</label>
            @Html.PasswordFor(m => m.MatKhau, new { @id = "password", @placeholder = "Nhập mật khẩu của bạn", @required = "required" })
            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="confirmpassword">Xác nhận mật khẩu</label>
            @Html.PasswordFor(m => m.NhapLaiMatKhau, new { @id = "confirmpassword", @placeholder = "Nhập lại mật khẩu của bạn", @required = "required" })
            @Html.ValidationMessageFor(m => m.NhapLaiMatKhau, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </div>

        <div class="resetpassword">
            <a href="@Url.Action("Login", "Relog")">Bạn đã có tài khoản? Đăng nhập</a>
        </div>
    }
</div>