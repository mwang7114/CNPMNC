
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutRelog.cshtml";
}

<div class="container">
    <div class="logo">
        <img src="~/Content/images/logo_syncmaster.png" alt="Logo">
    </div>
    <form>
        <div class="form-group">
            <label for="text">Name</label>
            <input type="text" id="text" placeholder="Nhập tên của bạn">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Nhập email của bạn" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" placeholder="Nhập password của bạn">
        </div>
        <div class="form-group">
            <label for="confirmpassword">Confirm Password</label>
            <input type="password" id="confirmpassword" placeholder="Nhập confirm password của bạn">
        </div>
        <div class="form-group">
            <button>Đăng ký</button>
        </div>

        <div class="resetpassword">
            <a href="@Url.Action("Login","Relog")">Bạn đã có tài khoản? Đăng nhập</a>
        </div>
    </form>
</div>

